<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TextBlock.Static.Background" Color="Transparent" />
    <SolidColorBrush x:Key="TextBlock.Static.Foreground" Color="{StaticResource COLOR_ANTI_FLASH_WHITE}" />

    <!-- WRAP THIS CONTROL IN A ScrollViewer IN MainWindow.xaml IN ORDER TO SEE SCROLL BARS -->
    <Style x:Key="PingTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
        <Setter Property="TextTrimming" Value="None"/>
        <Setter Property="FontFamily" Value="Open Sans" />
        <Setter Property="Background" Value="{StaticResource TextBlock.Static.Background}" />
        <Setter Property="Foreground" Value="{StaticResource TextBlock.Static.Foreground}" />
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>

    </Style>
    
</ResourceDictionary>