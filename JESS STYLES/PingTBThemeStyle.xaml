<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:james="https://jamesnet.dev/xaml/presentation">

    <Style TargetType="{x:Type Grid}" x:Key="RoundGridStyle">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Clip">
            <Setter.Value>
                <RectangleGeometry Rect="0,0,50,30">
                    <RectangleGeometry.RadiusX>17</RectangleGeometry.RadiusX>
                    <RectangleGeometry.RadiusY>17</RectangleGeometry.RadiusY>
                </RectangleGeometry>
            </Setter.Value>

        </Setter>
        
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="BorderStyle">
        <Setter Property="Background" Value="#87CEEB"/>
        <Setter Property="CornerRadius" Value="1"/>
    </Style>
    <Style TargetType="{x:Type Ellipse}" x:Key="SunEllipseStyle">
        <Setter Property="Fill" Value="#FFB15F"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style TargetType="{x:Type Control}" x:Key="CloudStyle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="13,11,27,3"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="9,10,31,4"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="8,8,32,6"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="15,7,25,7"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="11,7,29,7"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="17,11,23,3"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="18,8,22,6"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="-15,10,14,4"/>
                        <Ellipse Width="5" Height="5" Fill="{StaticResource PING_BRUSH_ANTI_FLASH_WHITE}" Margin="21,10,19,4"/>
                    </Grid>

                </ControlTemplate>
                
            </Setter.Value>
        
        
        </Setter>

    </Style>

    <Style TargetType="{x:Type Control}" x:Key="GalaxayStyle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="26,7,23,1"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="45,7,4,1"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="38,5,11,3"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="43,3,6,5"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="31,2,18,6"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="18,6,31,2"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="15,2,34,6"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="9,7,40,1"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="6,3,43,5"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="2,5,47,3"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="8,1,41,7"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="21,3,28,5"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="12,4,37,4"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFFFF" Margin="31,6,18,2"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="46,1,3,7"/>

                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="33,17,23,1"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="48,17,4,1"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="35,15,11,3"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="40,13,6,5"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="28,12,18,6"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="15,16,31,2"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="12,12,34,6"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="6,17,40,1"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="3,13,43,5"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="0,15,47,3"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFF" Margin="5,11,41,7"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="18,13,28,5"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="9,14,37,4"/>
                        <Rectangle Width="1" Height="1" Fill="#FFFFFFFF" Margin="28,16,18,2"/>
                        <Rectangle Width="1" Height="1" Fill="#55FFFFFF" Margin="43,11,3,7"/>
                    </Grid>

                </ControlTemplate>

            </Setter.Value>


        </Setter>

    </Style>

   

    <Style x:Key="PingTBThemeStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="SlideOut">
                            <james:ThickItem TargetName="cloud1" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="-65,9,0,0"/>
                            <james:ThickItem TargetName="cloud2" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="-65,11,0,0"/>
                            <james:ThickItem TargetName="cloud3" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="77,12,10,0"/>
                            <james:ThickItem TargetName="cloud4" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="77,10,0,0"/>
                            <james:ThickItem TargetName="sunellipse" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="25,0,0,0"/>
                            <james:ColorItem TargetName="sunellipse" Property="(Fill).Color" Mode="CubicEaseInOut" Duration="0:0:0.5" To="#F6F1D5"/>
                            <james:ThickItem TargetName="galaxy" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="0,0,0,0"/>
                            <james:ColorItem TargetName="border" Property="(Background).Color" Mode="CubicEaseInOut" Duration="0:0:0.5" To="#191C25"/>
                            <james:ValueItem TargetName="galaxy" Property="Opacity" Mode="CubicEaseInOut" Duration="0:0:0.5" To="1"/>
                        </Storyboard>
                        <Storyboard x:Key="SlideIn">
                            <james:ThickItem TargetName="cloud1" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="-3,9,0,0"/>
                            <james:ThickItem TargetName="cloud2" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="0,11,0,0"/>
                            <james:ThickItem TargetName="cloud3" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="28,12,-60,-10"/>
                            <james:ThickItem TargetName="cloud4" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="26,10,-30,0"/>
                            <james:ThickItem TargetName="sunellipse" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="3,0,0,0"/>
                            <james:ColorItem TargetName="sunellipse" Property="(Fill).Color" Mode="CubicEaseInOut" Duration="0:0:0.5" To="#FFB15F"/>
                            <james:ThickItem TargetName="galaxy" Property="Margin" Mode="CubicEaseInOut" Duration="0:0:0.5" To="25,0,0,0"/>
                            <james:ColorItem TargetName="border" Property="(Background).Color" Mode="CubicEaseInOut" Duration="0:0:0.5" To="#87CEEB"/>
                            <james:ValueItem TargetName="galaxy" Property="Opacity" Mode="CubicEaseInOut" Duration="0:0:0.5" To="0"/>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid Style="{StaticResource RoundGridStyle}">
                        <Border x:Name="border" Style="{StaticResource BorderStyle}"/>
                        <Control x:Name="cloud1" Style="{StaticResource CloudStyle}" Opacity="0.5" Margin="-3, 9, 0, 0"/>
                        <Control x:Name="cloud2" Style="{StaticResource CloudStyle}" Opacity="1.0" Margin="0, 11, 0, 0"/>
                        <Control x:Name="cloud3" Style="{StaticResource CloudStyle}" Opacity="0.5" Margin="28, 12, -60, -10"/>
                        <Control x:Name="cloud4" Style="{StaticResource CloudStyle}" Opacity="1" Margin="26, 10, -30, 0"/>
                        <Control x:Name="galaxy" Style="{StaticResource GalaxayStyle}" Opacity="0"/>
                        <Ellipse x:Name="sunellipse" Style="{StaticResource SunEllipseStyle}" Margin="3,0,0,0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource SlideOut}"/>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource SlideIn}"/>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>